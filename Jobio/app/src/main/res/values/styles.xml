<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="styJobio">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="styTitleWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="stySubTitleWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="stySubTitleTile">
        <item name="android:textColor">@color/tilt</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="styDescTile">
        <item name="android:textColor">@color/tilt</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="styDescWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="styDescSmallWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="styDescSmallTile">
        <item name="android:textColor">@color/tilt</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="styDescSmallDarkGray">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/tilt</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="android:textColor">@color/tilt</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
